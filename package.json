{
  "name": "io.cordova.hellocordova",
  "displayName": "HelloCordova",
  "version": "1.0.0",
  "description": "A sample Apache Cordova application that responds to the deviceready event.",
  "main": "index.js",
  "scripts": {
    "build": "tsc && cordova build",
    "build-linux": "tsc && cordova build electron --release --buildConfig=../build-linux.json",
    "build-windows": "tsc && cordova build electron --release --buildConfig=../build-windows.json",
    "build-mac": "tsc && cordova build electron --release --buildConfig=../build-mac.json",
    "build-android": "tsc && cordova build android --release",
    "test": "tsc && cordova run browser"
  },
  "keywords": [
    "ecosystem:cordova"
  ],
  "author": "Apache Cordova Team",
  "license": "Apache-2.0",
  "devDependencies": {
    "@types/cordova": "^0.0.34",
    "cordova": "^11.0.0",
    "cordova-android": "^10.1.2",
    "cordova-browser": "^6.0.0",
    "cordova-electron": "^3.1.0",
    "typescript": "^4.9.4"
  },
  "cordova": {
    "platforms": [
      "browser",
      "android",
      "electron"
    ]
  },
  "overrides": {
    "electron-builder": "^23.0.3"
  }
}
